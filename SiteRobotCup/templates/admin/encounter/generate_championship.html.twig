{# templates/admin/encounter/generate_championship.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
<div class="container mx-auto p-6">
    <h1 class="text-3xl font-bold mb-6">Générer les rencontres du championnat</h1>

    {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
        <div class="bg-white rounded-lg shadow-md p-6">
            <h2 class="text-xl font-semibold mb-4">Configuration des rencontres</h2>
            
            <div class="grid md:grid-cols-2 gap-6 mb-6">
                {{ form_row(form.championship, {
                    'attr': {'class': 'w-full rounded border-gray-300'}
                }) }}
                {{ form_row(form.field, {
                    'attr': {'class': 'w-full rounded border-gray-300'}
                }) }}
            </div>

            <div class="grid md:grid-cols-2 gap-6 mb-6">
                {{ form_row(form.startTime, {
                    'attr': {'class': 'w-full rounded border-gray-300'}
                }) }}
                {{ form_row(form.endTime, {
                    'attr': {'class': 'w-full rounded border-gray-300'}
                }) }}
            </div>

            <div class="grid md:grid-cols-2 gap-6">
                {{ form_row(form.matchDuration, {
                    'attr': {'class': 'w-full rounded border-gray-300'}
                }) }}
                {{ form_row(form.maxMatches, {
                    'attr': {'class': 'w-full rounded border-gray-300'}
                }) }}
            </div>
        </div>

        <div class="flex gap-4 mt-6">
            <button type="submit" class="px-6 py-2 bg-blue-500 text-white rounded hover:bg-blue-600">
                Générer les rencontres
            </button>
            <a href="{{ path('app_admin_encounters') }}" class="px-6 py-2 bg-gray-500 text-white rounded hover:bg-gray-600">
                Annuler
            </a>
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}