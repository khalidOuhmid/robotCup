
{% extends 'base.html.twig' %}

{% block title %}Modifier une équipe{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto bg-white rounded-lg shadow-lg p-6">
        <h1 class="text-2xl font-bold text-gray-900 mb-6">Modifier l'équipe</h1>
        
        {{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
            {{ form_row(form.name, {
                'attr': {
                    'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-sky-500 focus:ring-sky-500'
                }
            }) }}

            <div class="flex justify-end gap-4">
                <a href="{{ path('app_admin_teams') }}" 
                   class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50">
                    Annuler
                </a>
                <button type="submit" 
                        class="px-4 py-2 bg-sky-600 text-white rounded-md hover:bg-sky-700">
                    Enregistrer
                </button>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}