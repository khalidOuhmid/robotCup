{% extends 'base.html.twig' %}

{% block title %}Nouveau terrain{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="max-w-lg mx-auto">
        <h1 class="text-3xl font-bold text-gray-900 mb-6">Nouveau terrain</h1>
        
        <form method="post" class="space-y-6">
            <div>
                <label for="name" class="block text-sm font-medium text-gray-700">Nom du terrain</label>
                <input type="text" id="name" name="name" required
                       class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-sky-500 focus:ring-sky-500">
            </div>

            <div>
                <label for="competition" class="block text-sm font-medium text-gray-700">Compétition</label>
                <select id="competition" name="competition" required
                        class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-sky-500 focus:ring-sky-500">
                    {% for competition in competitions %}
                        <option value="{{ competition.id }}">{{ competition.cmpName }}</option>
                    {% endfor %}
                </select>
            </div>

            <div class="flex justify-end space-x-4">
                <a href="{{ path('app_admin_fields') }}" 
                   class="bg-gray-200 text-gray-700 px-4 py-2 rounded hover:bg-gray-300">
                    Annuler
                </a>
                <button type="submit" 
                        class="bg-sky-600 text-white px-4 py-2 rounded hover:bg-sky-700">
                    Créer
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}