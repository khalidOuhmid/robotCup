{% extends 'base.html.twig' %}

{% block title %}Hello TeamController!{% endblock %}

{% block body %}

{# {% if team_created %} #}

    <div class="flex flex-col w-full p-20">
        <div class="bg-sky-400 w-100 border-1 border-black p-3 my-5">
        <h1 class="text-white">Création d'équipe:</h1>
        </div>
        <ul class="flex flex-col">
        <li class="p-3 flex flex-row justify-between">
        <input type="text" placeholder="nom de l'équipe à ajouter" class="bg-slate-200 w-100 border-1 p-3 text-gray-500 w-8/12 border-black"/>
        <input type="submit" value="Enregistrer" class="bg-green-400 border-1 p-3 hover:cursor-pointer focus:bg-green-500" />
        </li>
        </ul>
    </div>

{# {% else %} #}

    <div class="flex flex-col w-full p-20">
    <div class="bg-sky-400 size-full border-1 border-black p-3">
        <h1 class="text-white">Mon équipe: </h1>
    </div>
    <ul class="flex flex-col">
        <li class="bg-slate-200 w-100 border-1 border-black p-3 gap-4 flex">
            <div class="flex flex-row gap-4">
                <input type="text" placeholder="Nom" class="bg-white w-full border-1 p-3 text-gray-500" />
                <input type="text" placeholder="Prénom" class="bg-white w-full border-1 p-3 text-gray-500" />
                <input type="email" placeholder="Email" class="bg-white w-full border-1 p-3 text-gray-500" />
            </div>
            <input type="submit" value="Ajouter" class="bg-green-400 border-1 p-3 hover:cursor-pointer focus:bg-green-500" />
        </li>
        {% for member in team %}
        <li class="bg-slate-200 w-100 border-1 border-black p-3 min-h-12 flex flex-row justify-between">
            <p> {{ member.name }} {{ member.surname }}</p>
        </li>
        {% endfor %}
    </ul>
</div>

{# {% endif %} #}

{% endblock %}
