{% extends 'base.html.twig' %}

{% block title %}Gestion de mon équipe{% endblock %}

{% block body %}
    <div class="flex flex-col w-full p-20">
        <div class="shadow-lg  bg-sky-800 size-full p-2 rounded-t-lg">
            <h1 class="text-white font-bold p-2">Mon équipe: <span class="text-lg">{{ team.name }}</span></h1>
        </div>

        <!-- Formulaire pour ajouter un membre -->
        {{ form_start(form) }}
        <div class="flex lg:flex-row flex-col items-center justify-between gap-4 bg-slate-200 px-4 p-4 rounded-b-lg">
            <div class="flex flex-col md:flex-row items-center justify-around gap-4 w-full sm:w-11/12 md:w-9/12 lg:w-7/12 xl:w-5/12">
                {{ form_widget(form.name, { 'attr': { 'class': 'bg-white w-full p-3 text-gray-500 rounded-lg', 'placeholder': 'Nom' } }) }}
                {{ form_widget(form.surname, { 'attr': { 'class': 'bg-white w-full p-3 text-gray-500 rounded-lg', 'placeholder': 'Prénom' } }) }}
                {{ form_widget(form.email, { 'attr': { 'class': 'bg-white w-full p-3 text-gray-500 rounded-lg', 'placeholder': 'Email' } }) }}
            </div>
            <button type="submit" class="bg-green-400 py-2 px-4 w-full sm:w-8/12 md:w-6/12 lg:w-4/12 xl:w-2/12 max-w-md hover:cursor-pointer focus:bg-green-500 rounded-lg">Ajouter un membre</button>
        </div>
        {{ form_end(form) }}

        <!-- Table des membres existants -->
        <div class="mt-10 flex justify-center">
            <table class="min-w-full table-auto bg-white shadow-lg rounded-lg overflow-hidden">
                <thead>
                    <tr class="bg-sky-800 text-white">
                        <th class="p-2">Nom</th>
                        <th class="p-2">Prénom</th>
                        <th class="p-2">Email</th>
                    </tr>
                </thead>
                <tbody>
                    {% if members|length > 0 %}
                        {% for member in members %}
                            <tr class="bg-white hover:bg-gray-50 border-t border-gray-200 text-center">
                                <td class="p-2 ">{{ member.name }}</td>
                                <td class="p-2 ">{{ member.surname }}</td>
                                <td class="p-2 ">{{ member.email }}</td>
                            </tr>
                        {% endfor %}
                    {% else %}
                        <tr>
                            <td colspan="3" class="border border-gray-300 p-2 text-center text-gray-500">
                                Aucun membre ajouté pour cette équipe.
                            </td>
                        </tr>
                    {% endif %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
