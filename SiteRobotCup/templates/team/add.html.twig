{% extends 'base.html.twig' %}

{% block title %}Gestion de mon équipe{% endblock %}

{% block body %}

<div class="flex flex-col w-full p-20">
    <div class="shadow-lg  bg-sky-800 size-full p-3 rounded-t-lg">
        <h1 class="text-white">Mon équipe: <strong>{{ team.name }}</strong></h1>
    </div>

    <!-- Formulaire pour ajouter un membre -->
    {{ form_start(form, { 'attr': { 'class': 'flex flex-col gap-4' } }) }}
        <div class="bg-slate-200 w-100 p-3 gap-4 flex justify-between rounded-b-lg">
            <div class="flex flex-row gap-4">
                {{ form_row(form.name, { 'attr': { 'class': 'bg-white w-full p-3 text-gray-500 rounded-lg', 'placeholder': 'Nom' } }) }}
                {{ form_row(form.surname, { 'attr': { 'class': 'bg-white w-full p-3 text-gray-500 rounded-lg', 'placeholder': 'Prénom' } }) }}
                {{ form_row(form.email, { 'attr': { 'class': 'bg-white w-full p-3 text-gray-500 rounded-lg', 'placeholder': 'Email' } }) }}
            </div>
            <button type="submit" class="bg-green-400 p-3 hover:cursor-pointer focus:bg-green-500 px-4 py-0 rounded-lg">Ajouter</button>
        </div>
    {{ form_end(form) }}

    <!-- Table des membres existants -->
    <div class="mt-5">
    {% if team.members|length > 0 %}
        <table class="min-w-full table-auto bg-white shadow-lg rounded-lg overflow-hidden">
            <thead>
                <tr class="bg-sky-800 text-white">
                    <th class="p-2">Nom</th>
                    <th class="p-2">Prénom</th>
                    <th class="p-2">Email</th>
                </tr>
            </thead>
            <tbody>
                {% for member in members %}
                    <tr class="bg-white hover:bg-gray-50 border-t border-gray-200 text-center">
                        <td class="p-2 ">{{ member.name }}</td>
                        <td class="p-2 ">{{ member.surname }}</td>
                        <td class="p-2 ">{{ member.email }}</td>
                    </tr>
                {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="3" class="border border-gray-300 p-2 text-center text-gray-500">
                            Aucun membre dans cette équipe.
                        </td>
                    </tr>
                {% endif %}
            </tbody>
        </table>
    </div>
</div>

{% endblock %}