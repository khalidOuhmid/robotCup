{% extends 'base.html.twig' %}

{% block title %}Gestion de mon équipe{% endblock %}

{% block body %}

<div class="flex flex-col w-full p-20">
    <div class="bg-sky-400 size-full border-1 border-black p-3">
        <h1 class="text-white">Mon équipe:</h1>
    </div>

    <!-- Formulaire pour ajouter un membre -->
    {{ form_start(form, { 'attr': { 'class': 'flex flex-col gap-4' } }) }}
        <div class="bg-slate-200 w-100 border-1 border-black p-3 gap-4 flex">
            <div class="flex flex-row gap-4">
                {{ form_row(form.name, { 'attr': { 'class': 'bg-white w-full border-1 p-3 text-gray-500', 'placeholder': 'Nom' } }) }}
                {{ form_row(form.surname, { 'attr': { 'class': 'bg-white w-full border-1 p-3 text-gray-500', 'placeholder': 'Prénom' } }) }}
                {{ form_row(form.email, { 'attr': { 'class': 'bg-white w-full border-1 p-3 text-gray-500', 'placeholder': 'Email' } }) }}
            </div>
            <button type="submit" class="bg-green-400 border-1 p-3 hover:cursor-pointer focus:bg-green-500 px-4 py-0">Ajouter</button>
        </div>
    {{ form_end(form) }}

    <!-- Table des membres existants -->
    <div class="mt-5">
    {% if team.members|length > 0 %}
        <table class="table-auto border-collapse border border-gray-300 w-full">
            <thead>
                <tr class="bg-gray-100">
                    <th class="border border-gray-300 p-2">Nom</th>
                    <th class="border border-gray-300 p-2">Prénom</th>
                    <th class="border border-gray-300 p-2">Email</th>
                </tr>
            </thead>
            <tbody>
                {% for member in members %}
                    <tr class="bg-white hover:bg-gray-50">
                        <td class="border border-gray-300 p-2">{{ member.name }}</td>
                        <td class="border border-gray-300 p-2">{{ member.surname }}</td>
                        <td class="border border-gray-300 p-2">{{ member.email }}</td>
                    </tr>
                {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="3" class="border border-gray-300 p-2 text-center text-gray-500">
                            Aucun membre dans cette équipe.
                        </td>
                    </tr>
                {% endif %}
            </tbody>
        </table>
    </div>
</div>

{% endblock %}