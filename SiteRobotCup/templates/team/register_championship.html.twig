{% extends 'base.html.twig' %}

{% block title %}Inscrire l'équipe au championnat{% endblock %}

{% block body %}
    <div class="flex flex-col w-full p-20">
        <div class="shadow-lg bg-sky-800 size-full p-2 rounded-t-lg">
            <h1 class="text-white font-bold p-2">Inscrire {{ team.name }} à un championnat</h1>
        </div>
        
        {{ form_start(form, {'attr': {'class': 'bg-slate-200 p-4 rounded-b-lg'}}) }}
            <div class="flex flex-col gap-4">
                {{ form_widget(form.championship, {
                    'attr': {
                        'class': 'bg-white w-full py-2 p-3 text-gray-500 rounded-lg'
                    }
                }) }}
                
                <button type="submit" class="bg-green-400 py-2 px-4 text-white rounded-lg hover:bg-green-500">
                    Inscrire au championnat
                </button>
            </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
