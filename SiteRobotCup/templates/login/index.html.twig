{% extends 'base.html.twig' %}

{% block title %}{{ 'global.login' | trans }}{% endblock %}

{% block body %}
<div class="flex justify-center m-2">
    <img class="h-48 w-auto" src="https://media.istockphoto.com/id/1300845620/vector/user-icon-flat-isolated-on-white-background-user-symbol-vector-illustration.jpg?s=612x612&w=0&k=20&c=yBeyba0hUkh14_jgv1OKqIH0CCSWU_4ckRkAoy2p73o=" alt="icone utilisateur">
</div>
<h2 class="text-center text-2xl font-mono font-medium">{{ 'global.identification' | trans }}</h2>
<div class="flex items-center justify-center m-8">
    <div class="flex flex-col justify-center items-center w-96">
        <form method="post" action="{{ path('app_login') }}" class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('auth') }}">

            {% if error %}
                <div class="text-red-500 text-xs italic">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <div class="mb-4">
                <label class="block text-gray-700 text-xs font-bold mb-2" for="email">{{ 'global.identifier' | trans }}</label>
                <input id="email" type="email" name="email" value="{{ last_username }}" required autofocus class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
            </div>
    
            <div class="mb-6">
                <label class="block text-gray-700 text-xs font-bold mb-2" for="password">{{ 'global.password' | trans }}</label>
                <input id="password" type="password" name="password" placeholder="***********" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
            </div>
    
            <div class="flex justify-end">
                <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">{{ 'global.login' | trans }}</button>
            </div>
        </form>
        <p class="text-center text-gray-600 text-sm mt-4">
            {{ 'login.no_account' | trans }}
            <a href="{{ path('register') }}" class="text-blue-500 hover:underline">{{ 'login.create_an_account' | trans }}</a>
        </p>
    </div>
</div>
{% endblock %}
