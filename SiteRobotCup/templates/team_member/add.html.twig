{# templates/team_member/add.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Ajouter un membre à {{ team.name }}{% endblock %}

{% block body %}
<div class="container mx-auto mt-10 px-4">
    <h1 class="text-3xl font-bold mb-8">Ajouter un membre à {{ team.name }}</h1>

    {{ form_start(form, {'attr': {'class': 'max-w-md mx-auto'}}) }}
        <div class="mb-4">
            {{ form_row(form.name, {
                'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm'}
            }) }}
        </div>

        <div class="mb-4">
            {{ form_row(form.surname, {
                'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm'}
            }) }}
        </div>

        <div class="mb-4">
            {{ form_row(form.email, {
                'attr': {'class': 'mt-1 block w-full rounded-md border-gray-300 shadow-sm'}
            }) }}
        </div>

        <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
            Ajouter le membre
        </button>
    {{ form_end(form) }}
</div>
{% endblock %}
