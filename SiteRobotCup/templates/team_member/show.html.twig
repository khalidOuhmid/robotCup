{# templates/team/show.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Équipe {{ team.name }}{% endblock %}

{% block body %}
<div class="container mx-auto mt-10 px-4">
    <h1 class="text-3xl font-bold mb-8">{{ team.name }}</h1>
    
    <h2 class="text-2xl font-bold mb-4">Membres de l'équipe</h2>
    <div class="bg-white shadow overflow-hidden sm:rounded-lg">
        {% if team.members|length > 0 %}
            <table class="min-w-full">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left">Nom</th>
                        <th class="px-6 py-3 text-left">Prénom</th>
                        <th class="px-6 py-3 text-left">Email</th>
                    </tr>
                </thead>
                <tbody class="bg-white">
                    {% for member in team.members %}
                        <tr class="border-t">
                            <td class="px-6 py-4">{{ member.name }}</td>
                            <td class="px-6 py-4">{{ member.surname }}</td>
                            <td class="px-6 py-4">{{ member.email }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p class="p-4 text-gray-500">Aucun membre dans cette équipe.</p>
        {% endif %}
    </div>
</div>
{% endblock %}
