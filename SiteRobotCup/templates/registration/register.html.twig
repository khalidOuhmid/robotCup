{% extends 'base.html.twig' %}




{% block title %}S'inscrire{% endblock %}




{% block body %}
<div class="flex justify-center m-2">
  <img class="h-48 w-auto" src="media/userIcon.png" alt="icone utilisateur">
</div>
<h2 class="text-center text-2xl font-mono font-medium">S'inscrire</h2>
<div class="flex items-center justify-center m-8">
  <div class="flex flex-col justify-center items-center w-96">

      {{ form_start(registrationForm, { 'attr': { 'class': 'bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4' } }) }}
    
      <div class="mb-4">
          <label class="block text-gray-700 text-xs font-bold mb-2" for="email">
              Identifiant
          </label>
          {{ form_widget(registrationForm.email, { 'attr': { 'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline' } }) }}
          {{ form_errors(registrationForm.email) }}
      </div>
    
      <div class="mb-4">
          <label class="block text-gray-700 text-xs font-bold mb-2" for="plainPassword">
              Mot de passe
          </label>
          {{ form_widget(registrationForm.plainPassword, { 'attr': { 'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline', 'placeholder': '***********' } }) }}
          {{ form_errors(registrationForm.plainPassword) }}
      </div>
    
      <div class="flex justify-end">
          <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" type="submit">
              S'inscrire
          </button>
      </div>
    
      {{ form_end(registrationForm) }}
    
      <p class="text-center text-gray-600 text-sm mt-4">
          Vous avez déjà un compte ?
          <a href="/login" class="text-blue-500 hover:underline">Se connecter</a>
      </p>
  </div>
</div>
{% endblock %}