<header class="bg-sky-900 text-white sticky top-0 z-50 w-full">
  <nav class="container mx-auto p-4">
    <!-- Logo and Burger Button -->
    <div class="flex items-center justify-between">
      <a href="{{ path('app_default') }}" class="text-3xl font-bold hover:text-gray-400">
        RoboCup
      </a>
      <button 
        id="burgerButton" 
        class="block md:hidden text-3xl focus:outline-none"
        aria-label="Menu"
      >
        ☰
      </button>
    </div>

    <!-- Navigation Menu -->
    <div 
      id="navMenu" 
      class="overflow-hidden max-h-0 transition-[max-height] duration-300 ease-in-out md:max-h-none md:flex md:flex-row md:space-x-4 flex flex-col gap-2"
    >
      <a href="{{ path('app_default') }}" class="text-xl px-4 py-2  shadow-lg rounded hover:shadow-xl hover:border-sky-300 hover:text-sky-300 transition duration-300">Accueil</a>
      {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <a href="{{ path('app_page_tableau_scores') }}" class="text-xl px-4 py-2 shadow-lg rounded hover:shadow-xl hover:border-sky-300 hover:text-sky-300 transition duration-300">Scores</a>
        <a href="{{ path('app_encounters') }}" class="text-xl px-4 py-2 shadow-lg rounded hover:shadow-xl hover:border-sky-300 hover:text-sky-300 transition duration-300">Rencontres</a>
        <a href="{{ path('app_team_show', { id: app.user.id }) }}" class="text-xl px-4 py-2 shadow-lg rounded hover:shadow-xl hover:border-sky-300 hover:text-sky-300 transition duration-300">Equipes</a>
        <a href="{{ path('generate_championship', { id: app.user.id }) }}" class="text-xl px-4 py-2 shadow-lg rounded hover:shadow-xl hover:border-sky-300 hover:text-sky-300 transition duration-300">Planning</a>
      
      {% endif %}
      {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_admin_users') }}" class="text-xl px-4 py-2 shadow-lg rounded hover:shadow-xl hover:border-sky-300 hover:text-sky-300 transition duration-300">Administration</a>
        <a href="{{ path('app_panel_scores_admin') }}" class="text-xl px-4 py-2 shadow-lg rounded hover:shadow-xl hover:border-sky-300 hover:text-sky-300 transition duration-300">Entrez les Scores</a>
      {% endif %}
      <a href="{% if is_granted('IS_AUTHENTICATED_FULLY') %}{{ path('app_logout') }}{% else %}{{ path('app_login') }}{% endif %}" 
         class="flex items-center text-xl px-2 py-2 border border-gray-300 shadow-lg rounded hover:shadow-xl hover:border-sky-300 hover:text-sky-300 transition duration-300">
        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
          Se déconnecter
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 ml-2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 9V5.25A2.25 2.25 0 0 1 10.5 3h6a2.25 2.25 0 0 1 2.25 2.25v13.5A2.25 2.25 0 0 1 16.5 21h-6a2.25 2.25 0 0 1-2.25-2.25V15m-3 0-3-3m0 0 3-3m-3 3H15" />
          </svg>
        {% else %}
          Se connecter
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 ml-2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 9V5.25A2.25 2.25 0 0 1 10.5 3h6a2.25 2.25 0 0 1 2.25 2.25v13.5A2.25 2.25 0 0 1 16.5 21h-6a2.25 2.25 0 0 1-2.25-2.25V15m12 0l3-3m0 0-3-3m3 3H2.25" />
          </svg>
        {% endif %}
      </a>
    </div>
  </nav>
</header>

<script>
  document.getElementById('burgerButton').addEventListener('click', function () {
    const navMenu = document.getElementById('navMenu');
    if (navMenu.classList.contains('max-h-0')) {
      navMenu.classList.remove('max-h-0');
      navMenu.classList.add('max-h-screen');
    } else {
      navMenu.classList.add('max-h-0');
      navMenu.classList.remove('max-h-screen');
    }
  });
</script>
