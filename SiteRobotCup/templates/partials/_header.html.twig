<header class="bg-sky-900 text-white sticky top-0 z-50 shadow-lg">
  <nav class="container mx-auto">
    <div class="max-w-7xl mx-auto px-6 py-4">
      <div class="flex items-center justify-between space-x-8">
        
        {# Logo avec bouton #}
        <a href="{{ path('app_default') }}" 
           class="flex items-center px-4 py-2 rounded-lg hover:bg-sky-800 transition-all duration-200">
          <span class="text-2xl font-bold bg-gradient-to-r from-sky-400 to-sky-200 bg-clip-text text-transparent">
            RoboCup
          </span>
        </a>

        {# Navigation principale avec boutons #}
        <div class="hidden md:flex items-center space-x-4">
          {% set navButtons = {
            'app_default': {
              'label': 'Accueil',
              'icon': 'M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6'
            },
            'app_page_tableau_scores': {
              'label': 'Scores',
              'icon': 'M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z'
            },
            'app_encounters': {
              'label': 'Rencontres',
              'icon': 'M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z'
            }
          } %}

          {% for route, button in navButtons %}
            <a href="{{ path(route) }}" 
               class="flex items-center px-4 py-2 rounded-lg text-sm font-medium 
                      {% if app.request.get('_route') == route %}
                        bg-sky-800 text-white shadow-inner
                      {% else %}
                        text-sky-100 hover:bg-sky-800 hover:text-white
                      {% endif %}
                      transition-all duration-200">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="{{ button.icon }}"/>
              </svg>
              {{ button.label }}
            </a>
          {% endfor %}

          {# Bouton équipe pour utilisateur connecté #}
          {% if is_granted('ROLE_USER') and not is_granted('ROLE_ADMIN') %}
            <a href="{{ path('app_team_show', {'id': app.user.id}) }}" 
               class="flex items-center px-4 py-2 rounded-lg text-sm font-medium 
                      {% if app.request.get('_route') == 'app_team_show' %}
                        bg-sky-800 text-white shadow-inner
                      {% else %}
                        text-sky-100 hover:bg-sky-800 hover:text-white
                      {% endif %}
                      transition-all duration-200">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                      d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
              {% if app.user.teams|length > 0 %}
                Mon équipe
              {% else %}
                Créer une équipe
              {% endif %}
            </a>
          {% endif %}

          {% if is_granted('ROLE_ADMIN') %}
    <div x-data="{ open: false }" class="relative inline-block">
        {# Bouton Admin #}
       <button @click="open = !open" 
            type="button"
            class="flex items-center px-4 py-2 rounded-lg text-sm font-medium 
                       {% if app.request.attributes.get('_route') starts with 'app_admin' %}
                           bg-sky-700 text-white
                       {% else %}
                           text-sky-100 hover:bg-sky-800
                       {% endif %}
                       transition-all duration-200">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                      d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            Administration
            <svg class="w-4 h-4 ml-2 transition-transform duration-200"
                 :class="{'rotate-180': open}"
                 fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
        </button>

        {# Menu déroulant #}
        <div x-cloak
             x-show="open"
             @click.away="open = false"
             class="absolute right-0 mt-2 w-56 bg-white rounded-lg shadow-lg overflow-hidden z-50"
             style="position: absolute; min-width: 14rem;">
            
            <div class="py-1">
                <a href="{{ path('app_admin_encounters') }}" 
                   class="flex items-center px-4 py-2 hover:bg-sky-50 text-gray-700 hover:text-sky-700">
                    <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                              d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                    </svg>
                    <span class="flex flex-col">
                        <span class="text-sm font-medium">Créneaux horaires</span>
                        <span class="text-xs text-gray-500">Gérer les rencontres</span>
                    </span>
                </a>

                <a href="{{ path('app_admin_users') }}"
                   class="flex items-center px-4 py-2 hover:bg-sky-50 text-gray-700 hover:text-sky-700">
                    <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/>
                    </svg>
                    <span class="flex flex-col">
                        <span class="text-sm font-medium">Utilisateurs</span>
                        <span class="text-xs text-gray-500">Gérer les comptes</span>
                    </span>
                </a>

                {# Nouveau bouton pour la gestion des équipes #}
                <a href="{{ path('app_admin_teams') }}"
                   class="flex items-center px-4 py-2 hover:bg-sky-50 text-gray-700 hover:text-sky-700">
                    <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                    </svg>
                    <span class="flex flex-col">
                        <span class="text-sm font-medium">Équipes</span>
                        <span class="text-xs text-gray-500">Gérer les équipes</span>
                    </span>
                </a>

                <a href="{{ path('app_panel_scores_admin') }}"
                   class="flex items-center px-4 py-2 hover:bg-sky-50 text-gray-700 hover:text-sky-700">
                    <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                    </svg>
                    <span class="flex flex-col">
                        <span class="text-sm font-medium">Scores</span>
                        <span class="text-xs text-gray-500">Gérer les résultats</span>
                    </span>
                </a>

                {# Add the Fields menu item in the admin dropdown #}
                <a href="{{ path('app_admin_fields') }}"
                   class="flex items-center px-4 py-2 hover:bg-sky-50 text-gray-700 hover:text-sky-700">
                    <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M17 14v6m-3-3h6M6 10h2a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v2a2 2 0 002 2zm10 0h2a2 2 0 002-2V6a2 2 0 00-2-2h-2a2 2 0 00-2 2v2a2 2 0 002 2zM6 20h2a2 2 0 002-2v-2a2 2 0 00-2-2H6a2 2 0 00-2 2v2a2 2 0 002 2z"/>
                    </svg>
                    <span class="flex flex-col">
                        <span class="text-sm font-medium">Terrains</span>
                        <span class="text-xs text-gray-500">Gérer les terrains</span>
                    </span>
                </a>
            </div>
        </div>
    </div>
{% endif %}


        </div>

        {# Bouton de connexion/déconnexion #}
        <a href="{% if is_granted('IS_AUTHENTICATED_FULLY') %}{{ path('app_logout') }}{% else %}{{ path('app_login') }}{% endif %}" 
           class="flex items-center px-4 py-2 rounded-lg text-sm font-medium text-sky-100 hover:bg-sky-800 hover:text-white transition-all duration-200">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"/>
          </svg>
          {% if is_granted('IS_AUTHENTICATED_FULLY') %}Se déconnecter{% else %}Se connecter{% endif %}
        </a>
      </div>
    </div>
  </nav>
</header>

<style>
.admin-menu-item {
  @apply block px-4 py-2 text-sm text-gray-700 hover:bg-sky-50 hover:text-sky-900 transition-colors duration-150;
}
</style>
