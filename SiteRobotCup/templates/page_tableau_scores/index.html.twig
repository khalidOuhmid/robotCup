{% extends 'base.html.twig' %}

{% block title %}Tableau des scores{% endblock %}

{% block body %}

<section class="h-screen w-screen bg-blue-100">
    <div class="container mx-auto px-4">
        <h1 class="text-3xl font-bold text-center mb-8 p-10">Classement des équipes</h1>

        <table class="min-w-full table-auto bg-white shadow-lg rounded-lg overflow-hidden">
            <thead>
                <tr class="bg-sky-800 text-white">
                    <th class="px-4 py-2 text-center">Rang</th>
                    <th class="px-4 py-2 text-center">Nom équipe</th>
                    <th class="px-4 py-2 text-center">Match Joué</th>
                    <th class="px-4 py-2 text-center">Match Gagné</th>
                    <th class="px-4 py-2 text-center">Match Nul</th>
                    <th class="px-4 py-2 text-center">Points</th>
                </tr>
            </thead>
            <tbody>
                {% for team in teams %}
                    <tr class="border-t border-gray-200 hover:bg-gray-50">
                        <td class="px-4 py-2 text-center">{{ team.rank }}</td>
                        <td class="px-4 py-2 text-center">{{ team.name }}</td>
                        <td class="px-4 py-2 text-center">{{ team.matches_played }}</td>
                        <td class="px-4 py-2 text-center">{{ team.matches_won }}</td>
                        <td class="px-4 py-2 text-center">{{ team.matches_drawn }}</td>
                        <td class="px-4 py-2 text-center">{{ team.points }}</td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="px-4 py-2 text-center text-gray-500">Aucune équipe disponible.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</section>

{% endblock %}
