{% extends 'base.html.twig' %}

{% block title %}Liste des rencontres{% endblock %}

{% block body %}
<main>
    <section class="h-screen w-screen bg-blue-100">
           <!-- Section des rencontres -->
        <div class="container mx-auto px-4">
            <h1 class="text-3xl font-bold text-center mb-8 p-10">Rencontres programmées</h1>

            <table class="min-w-full table-auto bg-white shadow-lg rounded-lg overflow-hidden">
                <thead>
                    <tr class="bg-sky-800 text-white">
                        <th class="px-4 py-2 text-center">Numéro de rencontre</th>
                        <th class="px-4 py-2 text-center">Équipe Bleue</th>
                        <th class="px-4 py-2 text-center">Score</th>
                        <th class="px-4 py-2 text-center">Équipe Verte</th>
                    </tr>
                </thead>
                <tbody>
                    {% for encounter in encounters %}
                        <tr class="border-t border-gray-200 hover:bg-gray-50">
                            <td class="px-4 py-2 text-center">{{ loop.index }}</td>
                            <td class="px-4 py-2 text-blue-600 text-center">{{ encounter.teamBlue.name }}</td>
                            <td class="px-4 py-2 text-center">
                                {{ encounter.scoreBlue ?? '-' }} - {{ encounter.scoreGreen ?? '-' }}
                            </td>
                            <td class="px-2 py-2 text-green-600 text-center">{{ encounter.teamGreen.name }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="px-2 py-2 text-center text-gray-500">
                                Aucune rencontre n'est programmée pour le moment.
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </section>
</main>

{% endblock %}
