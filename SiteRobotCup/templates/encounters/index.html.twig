{% extends 'base.html.twig' %}

{% block title %}Liste des rencontres
{% endblock %}

{% block body %}
<main>
    <section class="h-screen w-screen bg-blue-100">
        <!-- Section des rencontres -->
        <div class="container mx-auto px-4">
            <h1 class="text-3xl font-bold text-center mb-8 p-10">Rencontres programmées</h1>

            <!-- Bouton d'export en JSON -->
            <div class="mb-10 flex justify-end">
                <a href="{{ path('app_encounters_export') }}" class="bg-green-500 text-white px-4 py-2 rounded-lg shadow hover:bg-green-600 flex items-center gap-2">
                    Exporter en JSON
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewbox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
                    </svg>
                </a>
            </div>

            <table class="min-w-full table-auto bg-white shadow-lg rounded-lg overflow-hidden">
                <thead>
                    <tr class="bg-sky-800 text-white">
                        <th class="px-4 py-2 text-center">Numéro de rencontre</th>
                        <th class="px-4 py-2 text-center">Équipe Bleue</th>
                        <th class="px-4 py-2 text-center">Score</th>
                        <th class="px-4 py-2 text-center">Équipe Verte</th>
                    </tr>
                </thead>
                <tbody>
                    {% for encounter in encounters %}
                        <tr class="border-t border-gray-200 hover:bg-gray-50">
                            <td class="px-4 py-2 text-center">{{ loop.index + ((page - 1) * 10) }}</td>
                            <td class="px-4 py-2 text-blue-600 text-center">{{ encounter.teamBlue.name }}</td>
                            <td class="px-4 py-2 text-center">
                                {{ encounter.scoreBlue ?? '-' }}
                                -
                                {{ encounter.scoreGreen ?? '-' }}
                            </td>
                            <td class="px-2 py-2 text-green-600 text-center">{{ encounter.teamGreen.name }}</td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="px-2 py-2 text-center text-gray-500">
                                Aucune rencontre n'est programmée pour le moment.
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        <div class="pagination mt-6 flex justify-center items-center space-x-1">
            <!-- Bouton précédent -->
            {% if page > 1 %}
                <button onclick="window.location.href='{{ path('app_encounters', {'page': page - 1}) }}'"
                        class="px-3 py-1 bg-sky-800 text-white rounded-l hover:bg-sky-400 flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 15.75 3 12m0 0 3.75-3.75M3 12h18"/>
                    </svg>
                </button>
            {% endif %}

            <!-- Première page -->
            <button onclick="window.location.href='{{ path('app_encounters', {'page': 1}) }}'"
                    class="px-3 py-1 {{ page == 1 ? 'bg-sky-800 text-white' : 'bg-gray-200' }} hover:bg-sky-400 rounded-lg">
                1
            </button>

            <!-- Points de suspension avant les pages proches -->
            {% if page > 4 %}
                <span class="px-3 py-1">...</span>
            {% endif %}

            <!-- Pages proches -->
            {% for i in max(2, page - 2)..min(totalPages - 1, page + 2) %}
                <button onclick="window.location.href='{{ path('app_encounters', {'page': i}) }}'"
                        class="px-3 py-1 {{ i == page ? 'bg-sky-800 text-white' : 'bg-gray-200' }} hover:bg-sky-400 rounded-lg">
                    {{ i }}
                </button>
            {% endfor %}

            <!-- Points de suspension après les pages proches -->
            {% if page < totalPages - 3 %}
                <span class="px-3 py-1">...</span>
            {% endif %}

            <!-- Dernière page -->
            {% if totalPages > 1 %}
                <button onclick="window.location.href='{{ path('app_encounters', {'page': totalPages}) }}'"
                        class="px-3 py-1 {{ page == totalPages ? 'bg-sky-800 text-white' : 'bg-gray-200' }} hover:bg-sky-400 rounded-lg">
                    {{ totalPages }}
                </button>
            {% endif %}

            <!-- Bouton suivant -->
            {% if page < totalPages %}
                <button onclick="window.location.href='{{ path('app_encounters', {'page': page + 1}) }}'"
                        class="px-3 py-1 bg-sky-800 text-white rounded-r hover:bg-sky-400 flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewbox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25 21 12m0 0-3.75 3.75M21 12H3"/>
                    </svg>
                </button>
            {% endif %}
        </div>
    </section>
</main>
{% endblock %}
