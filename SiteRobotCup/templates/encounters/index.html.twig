{% extends 'base.html.twig' %}

{% block title %}Liste des rencontres{% endblock %}

{% block body %}
<div class="container mx-auto p-4">
    <div class="bg-white rounded-lg shadow-lg">
        {# Navigation par semaine #}
        <div class="p-4 border-b">
            <div class="flex justify-center space-x-2">
                <a href="#" class="px-2 py-1 border rounded">&lt;</a>
                <span class="px-2 py-1">1</span>
                <span class="px-2 py-1">2</span>
                <span class="px-2 py-1">3</span>
                <span class="px-2 py-1">4</span>
                <a href="#" class="px-2 py-1 border rounded">&gt;&gt;</a>
            </div>
        </div>

        {# Liste des rencontres #}
        <div class="p-4">
            {% for encounter in encounters %}
                <div class="mb-4 pb-4 border-b last:border-b-0">
                    <div class="text-sm text-gray-600 mb-1">
                        Rencontre n°{{ loop.index }}
                    </div>
                    
                    <div class="flex justify-between items-center">
                        <div class="flex-1">
                            <span class="text-blue-600">{{ encounter.teamBlue.name }}</span>
                        </div>
                        <div class="px-4">
                            {{ encounter.scoreBlue ?? '-' }} - {{ encounter.scoreGreen ?? '-' }}
                        </div>
                        <div class="flex-1 text-right">
                            <span class="text-green-600">{{ encounter.teamGreen.name }}</span>
                        </div>
                    </div>
                </div>
            {% else %}
                <p class="text-center text-gray-500">Aucune rencontre n'est programmée pour le moment.</p>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
