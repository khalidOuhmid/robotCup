{% extends 'base.html.twig' %}

{% block title %}Résultats Rencontre{% endblock %}

{% block body %}

<section class="h-screen w-screen bg-blue-100">
    <main class="flex justify-center items-center min-h-screen  bg-gray-50">
        <div class="w-4/5 bg-white rounded-lg shadow-lg p-6 flex flex-col">
            <h1 class="text-2xl font-semibold text-center mb-6">Résultats Rencontre</h1>
            <form method="post" action="{{ path('app_panel_scores_admin', { page: page }) }}" onsubmit="return validateScores()">
                <div class="overflow-x-auto mb-4">
                    <table class="w-full border-collapse border border-gray-300">
                        <thead>
                            <tr class="bg-blue-100">
                                <th class="border border-gray-300 px-4 py-2 text-center">n° rencontre</th>
                                <th class="border border-gray-300 px-4 py-2 text-center bg-sky-800 text-white">équipe bleu</th>
                                <th class="border border-gray-300 px-4 py-2 text-center bg-green-800 text-white">équipe vert</th>
                                <th class="border border-gray-300 px-4 py-2 text-center">Score</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for match in matches %}
                                <tr class="border-t border-gray-200 hover:bg-gray-50">
                                    <td class="border border-gray-300 px-4 py-2 text-center">{{ loop.index + ((page - 1) * 5) }}</td>
                                    <td class="border border-gray-300 px-4 py-2 text-blue-600 text-center">{{ match.teamBlue.name }}</td>
                                    <td class="border border-gray-300 px-4 py-2 text-green-600 text-center">{{ match.teamGreen.name }}</td>
                                    <td class="border border-gray-300 px-4 py-2 text-center">
                                        <input type="number" id="blueScore_{{ match.id }}" name="scores[{{ match.id }}][blue]" value="{{ match.scoreBlue ?? '' }}" class="border border-gray-300 w-12 text-center" placeholder="-" min="0" />
                                        -
                                        <input type="number" id="greenScore_{{ match.id }}" name="scores[{{ match.id }}][green]" value="{{ match.scoreGreen ?? '' }}" class="border border-gray-300 w-12 text-center" placeholder="-" min="0" />
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="5" class="px-4 py-2 text-center text-gray-500">
                                        Aucune rencontre n'est programmée pour le moment.
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

                <div class="flex justify-center items-center mt-auto mb-4">
                    <div class="pagination flex justify-center">
                        {% if page > 1 %}
                            <button 
                                onclick="window.location.href='{{ path('app_panel_scores_admin', {'page': page - 1}) }}'" 
                                class="mx-1 px-3 py-1 bg-sky-800 text-white rounded-l hover:bg-sky-400 rounded-lg">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 hover:stroke-black">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 15.75 3 12m0 0 3.75-3.75M3 12h18" />
                                </svg>
                            </button>
                        {% endif %}

                        {% for i in 1..totalPages %}
                            <button 
                                onclick="window.location.href='{{ path('app_panel_scores_admin', {'page': i}) }}'" 
                                class="mx-1 px-3 py-1 {{ i == page ? 'bg-sky-800 text-white' : 'bg-gray-200' }} hover:bg-sky-400 rounded-lg">
                                {{ i }}
                            </button>
                        {% endfor %}

                        {% if page < totalPages %}
                            <button 
                                onclick="window.location.href='{{ path('app_panel_scores_admin', {'page': page + 1}) }}'" 
                                class="mx-1 px-3 py-1 bg-sky-800 text-white rounded-r hover:bg-sky-400 rounded-lg">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6 hover:stroke-black">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25 21 12m0 0-3.75 3.75M21 12H3" />
                                </svg>
                            </button>
                        {% endif %}
                    </div>
                </div>

                <div class="flex justify-center">
                    <button id="submitButton" type="submit" class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded" disabled>
                        Enregistrer
                    </button>
                </div>
            </form>
        </div>
    </main>
</section>
<script>
    // Fonction de validation qui permet d'activer ou désactiver le bouton "Enregistrer"
    function validateScores() {
        let isValid = true;

        // Vérifier chaque pair de champs (bleu et vert)
        document.querySelectorAll('input[type="number"]').forEach(function(blueScoreInput) {
            const greenScoreInput = document.querySelector(`input[name="${blueScoreInput.name.replace('[blue]', '[green]')}"]`);
            
            // Si l'un des champs du pair est vide, on désactive le bouton "Enregistrer"
            if ((blueScoreInput.value === '' && greenScoreInput.value !== '') || (blueScoreInput.value !== '' && greenScoreInput.value === '')) {
                isValid = false;
            }
        });

        // Si tous les pairs sont correctement remplis (ou les deux sont vides), on active le bouton
        if (isValid) {
            document.getElementById('submitButton').disabled = false;
        } else {
            document.getElementById('submitButton').disabled = true;
        }

        return true; // Toujours permettre la soumission
    }

    // Activer la validation dès que la page est chargée
    window.onload = validateScores;
</script>

{% endblock %}
