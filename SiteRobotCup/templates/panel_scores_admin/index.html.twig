{% extends 'base.html.twig' %}

{% block title %}Gestion des Scores{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    {% for message in app.flashes('success') %}
        <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-4 rounded">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('error') %}
        <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4 rounded">
            {{ message }}
        </div>
    {% endfor %}

    <h1 class="text-3xl font-bold mb-6">Gestion des Scores</h1>

    <form method="post" class="bg-white shadow-md rounded-lg overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Équipe Bleue</th>
                    <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Score</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Équipe Verte</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">État</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {% for match in matches %}
                    <tr>
                        <td class="px-6 py-4 text-sm text-gray-900">
                            {{ match.teamBlue.name }}
                        </td>
                        <td class="px-6 py-4">
                            <div class="flex items-center justify-center space-x-2">
                                <input type="number" 
                                       name="scores[{{ match.id }}][blue]" 
                                       value="{{ match.scoreBlue }}"
                                       class="w-16 rounded border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500"
                                       min="0">
                                <span class="text-gray-500">-</span>
                                <input type="number" 
                                       name="scores[{{ match.id }}][green]" 
                                       value="{{ match.scoreGreen }}"
                                       class="w-16 rounded border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500"
                                       min="0">
                            </div>
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-900">
                            {{ match.teamGreen.name }}
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-900">
                            {{ match.state }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="px-6 py-4 text-center text-gray-500">
                            Aucun match trouvé
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <div class="bg-gray-50 px-6 py-4 flex items-center justify-between">
            <div class="flex space-x-2">
                {% if page > 1 %}
                    <a href="{{ path('app_panel_scores_admin', {page: page - 1}) }}" 
                       class="bg-gray-200 hover:bg-gray-300 text-gray-700 px-4 py-2 rounded transition">
                        Précédent
                    </a>
                {% endif %}
                <span class="px-4 py-2">
                    Page {{ page }} sur {{ totalPages }}
                </span>
                {% if page < totalPages %}
                    <a href="{{ path('app_panel_scores_admin', {page: page + 1}) }}" 
                       class="bg-gray-200 hover:bg-gray-300 text-gray-700 px-4 py-2 rounded transition">
                        Suivant
                    </a>
                {% endif %}
            </div>
            <button type="submit" 
                    class="bg-blue-500 hover:bg-blue-600 text-white px-6 py-2 rounded transition">
                Enregistrer les scores
            </button>
        </div>
    </form>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const form = document.querySelector('form');
    const inputs = form.querySelectorAll('input[type="number"]');

    inputs.forEach(input => {
        input.addEventListener('change', function() {
            if (this.value < 0) {
                this.value = 0;
            }
        });
    });
});
</script>
{% endblock %}
